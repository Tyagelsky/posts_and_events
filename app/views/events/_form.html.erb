<div class="row">
  <div class="col-xs-12">
    <%= form_for(@event, html: {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title%>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control",
                         placeholder: "title of events", autofocus: true%>
      </div>
   </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description%>
      </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows:8, class: "form-control",
                           placeholder: "Small description for event"%>
        </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :start_time%>
      </div>
        <div class="col-sm-8">
          <%= f.datetime_select :start_time%>
        </div>
    </div>
    <div class="form-group">
      <div class='control-label col-sm-2'>
        <%= f.label :end_time%>
      </div>
        <div class="col-sm-8">
          <%= f.datetime_select :end_time%>
        </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit  class:"btn btn-primary btn-lg"%>
    </div>
  </div>
    <% end %>
   <div class="col-xs-5 col-xs-offset-5">
     <%= link_to "Back to events", events_path, class:"btn btn-success btn-md"%>
    </div>
  </div>
</div>
